# Drive E Processing Configuration
# Copy this to drive_e_config.env and customize as needed

# Drive E root path (modify if different)
DRIVE_E_ROOT=E:/

# API endpoints (should match your running services)
API_BASE_URL=http://127.0.0.1:8002
VOICE_BASE_URL=http://127.0.0.1:8001

# Processing configuration
MAX_WORKERS=4
BATCH_SIZE=100
MAX_FILES_PER_RUN=1000

# File type filtering
PROCESS_IMAGES=true
PROCESS_VIDEOS=true
PROCESS_AUDIO=false

# Image processing options
GENERATE_CAPTIONS=true
DETECT_FACES=true
EXTRACT_EXIF=true
GENERATE_THUMBNAILS=true

# Video processing options
EXTRACT_KEYFRAMES=true
EXTRACT_METADATA=true
GENERATE_VIDEO_THUMBNAILS=true

# Performance tuning
CONCURRENT_CAPTION_REQUESTS=2
CONCURRENT_FACE_REQUESTS=3
TIMEOUT_SECONDS=60

# Storage and organization
ORGANIZE_BY_DATE=true
ORGANIZE_BY_CAMERA=false
CREATE_DUPLICATES_REPORT=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=drive_e_processing.log
SAVE_DETAILED_REPORT=true

# Safety features
DRY_RUN_FIRST=true
BACKUP_BEFORE_MOVE=false
SKIP_LARGE_FILES_MB=100

# Exclusion patterns (comma-separated)
EXCLUDE_DIRECTORIES=System Volume Information,Recycle Bin,$RECYCLE.BIN,lost+found
EXCLUDE_FILENAME_PATTERNS=*.tmp,*.cache,Thumbs.db,.DS_Store

# Recovery options
RESUME_FROM_CHECKPOINT=true
CHECKPOINT_INTERVAL=50
RETRY_FAILED_FILES=true
MAX_RETRIES=3
